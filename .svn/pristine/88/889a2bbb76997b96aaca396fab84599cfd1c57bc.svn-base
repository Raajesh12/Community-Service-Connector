<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raajesharunachalam.communityserviceconnector.EventDetailActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/event_detail_user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/event_detail_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/event_detail_user_icon"
            app:layout_constraintRight_toLeftOf="@id/event_detail_user_icon"
            app:layout_constraintTop_toTopOf="@id/event_detail_user_icon" />

        <TextView
            android:id="@+id/event_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_detail_user_icon" />

        <ImageView
            android:id="@+id/event_detail_image"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_detail_title" />

        <TextView
            android:id="@+id/event_detail_description_actual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_detail_image" />

        <TextView
            android:id="@+id/event_detail_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:text="@string/event_detail_address"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_detail_description_actual" />

        <TextView
            android:id="@+id/event_detail_address_actual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@id/event_detail_address_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/event_detail_address_label" />

        <TextView
            android:id="@+id/event_detail_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:text="@string/event_detail_date"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_detail_address_actual" />

        <TextView
            android:id="@+id/event_detail_date_actual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@id/event_detail_date_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/event_detail_date_label" />

        <TextView
            android:id="@+id/event_detail_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:text="@string/event_detail_time"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_detail_date_actual" />

        <TextView
            android:id="@+id/event_detail_time_actual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@id/event_detail_time_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/event_detail_time_label" />

        <TextView
            android:id="@+id/event_detail_people_interested_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:text="@string/event_detail_number_interested"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_detail_time_actual" />

        <TextView
            android:id="@+id/event_detail_people_interested_actual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@id/event_detail_people_interested_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/event_detail_people_interested_label" />

        <Button
            android:id="@+id/event_detail_view_people"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:text="@string/event_detail_people_interested_button"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_detail_people_interested_actual" />

        <TextView
            android:id="@+id/event_detail_link_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:text="@string/event_detail_link_label"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_detail_view_people" />

        <TextView
            android:id="@+id/event_detail_link_actual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:autoLink="web"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/event_detail_link_label"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/event_detail_link_label" />

        <Button
            android:id="@+id/event_detail_add_to_calendar"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:text="@string/event_calendar_button"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_detail_link_actual" />

        <Button
            android:id="@+id/event_detail_interested_button"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:text="@string/interested_button_message"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@id/event_detail_add_to_calendar"
            app:layout_constraintTop_toTopOf="@id/event_detail_add_to_calendar" />

        <Button
            android:id="@+id/event_detail_maps_button"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:text="@string/event_detail_maps_button"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@id/event_detail_interested_button"
            app:layout_constraintTop_toTopOf="@id/event_detail_add_to_calendar" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>